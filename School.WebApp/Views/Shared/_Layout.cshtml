<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - School.WebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />


    <style>
        @@import url('https://fonts.googleapis.com/css2?family=Cairo:wght@500&family=Changa:wght@600&family=Titillium+Web:wght@300&display=swap');

        .dropdown-toggle::after {
            display: block;
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            right: inherit !important;
        }

        #sidebar .sidebar-header {
            text-align: end;
            padding: 20px;
            background: #6d7fcc;
        }

        .font-icon {
            padding-left: 10px;
        }

        .dropdown-toggle::after {
            display: block;
            position: absolute;
            top: 50%;
            left: 10px !important;
            transform: translateY(-50%);
        }

        .dropup, .dropend, .dropdown, .dropstart {
            position: relative;
        }

        .bg-navbar-theme .navbar-nav .show > .nav-link, .bg-navbar-theme .navbar-nav .active > .nav-link, .bg-navbar-theme .navbar-nav .nav-link.show, .bg-navbar-theme .navbar-nav .nav-link.active {
            color: #516377;
        }

        .avatar {
            position: relative;
            width: 2.375rem;
            height: 2.375rem;
            cursor: pointer;
        }

            .avatar img {
                width: 100%;
                height: 100%;
            }

        .rounded-circle {
            border-radius: 50% !important;
        }

        .avatar.avatar-online:after {
            background-color: #39da8a;
        }

        .layout-navbar .navbar-dropdown.dropdown-user .dropdown-menu {
            min-width: 14rem;
        }

        .layout-navbar .navbar-dropdown .dropdown-menu {
            min-width: 22rem;
            overflow: hidden;
        }

        .dropdown-item {
            line-height: 1.54;
        }

        .dropdown-item {
            display: block;
            width: 100%;
            padding: 0.5rem 1rem;
            clear: both;
            font-weight: 400;
            color: #677788;
            text-align: inherit;
            white-space: nowrap;
            background-color: transparent;
            border: 0;
        }

        .avatar.avatar-online:after, .avatar.avatar-offline:after, .avatar.avatar-away:after, .avatar.avatar-busy:after {
            content: "";
            position: absolute;
            display: none;
            bottom: 0;
            right: 3px;
            width: 8px;
            height: 8px;
            border-radius: 100%;
            box-shadow: 0 0 0 2px #fff;
        }

        ul ul a {
            font-size: 0.9em !important;
            padding-right: 30px !important;
            background: #6d7fcc !important;
        }

        #sidebar {
            min-width: 250px;
            max-width: 250px;
            background: #4159AE;
            color: #fff;
            transition: all 0.3s;
        }

            #sidebar ul li.active > a, a[aria-expanded="true"] {
                color: #4159AE !important;
                background: #fff;
            }

            #sidebar ul li a:hover {
                color: #4159AE !important;
                background: #fff;
            }
    </style>

    <style>
        .navbar {
            background: #fff;
            border: none;
            margin: -19px;
            margin-bottom: 40px;
            box-shadow: 0px 1px 6px rgb(65 89 174 / 24%);
        }
        /* CSS used here will be applied after bootstrap.css */

        .dropdown {
            display: inline-block;
            margin-left: 20px;
            padding: 10px;
        }


        .glyphicon-bell {
            font-size: 1.5rem;
        }



        .notifications-wrapper {
            overflow: auto;
            max-height: 250px;
        }

        .menu-title {
            color: #ff7788;
            font-size: 1.5rem;
            display: inline-block;
        }

        .glyphicon-circle-arrow-right {
            margin-left: 10px;
        }


        .notification-heading, .notification-footer {
            padding: 2px 10px;
        }


        .dropdown-menu.divider {
            margin: 5px 0;
        }

        .item-title {
            font-size: 1.3rem;
            color: #000;
        }

        .notifications a.content {
            text-decoration: none;
            background: #ccc;
        }

        .notification-item {
            padding: 10px;
            margin: 5px;
            background: #ccc;
            border-radius: 4px;
        }

        .fa-regular, .far {
            font-weight: 400;
            font-size: 20px;
            color: #4159AE;
        }
    </style>


    <style>
        #sidebar ul li a {
            font-size: 17px !important;
        }

        .dropdown-menu.show {
            display: block;
            margin-top: 231px;
        }

        .menu-title {
            color: #fff;
            font-size: 1.5rem;
            display: inline-block;
        }

        a.text-dark:focus, a.text-dark:hover {
            color: #fff !important;
        }

        a.text-dark:focus, a.text-dark {
            color: #fff !important;
        }

        .notifications {
            min-width: 350px;
        }
    </style>
</head>
<body style="font-family: 'Changa', sans-serif !important;    ">
 
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
