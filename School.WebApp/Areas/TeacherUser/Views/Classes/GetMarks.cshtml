@model School.Data.ViewModels.MarkViewModel

@{
    ViewData["Title"] = "درجات الطلاب";
}


<link rel="stylesheet" href="~/assets/TFiles/css/TableListStyle.css" />
<link rel="stylesheet" href="~/css/ClassesMediaQuery.css" />



<table id="myTable" class="table dt-responsive" style="width:100%">
    <thead class="thead_dark">
        <tr>
            <th class="text-right"> المجموع الكلي</th>
            <td class="text-center"> الدرجة النهائية  </td>
            <td class="text-center">  درجات التقويم النوعي     </td>
            <td class="text-center">  الإختبارات القصيرة </td>
            <td class="text-center">    اسم المادة </td>
            <td class="text-center">    اسم الطالب </td>


        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.MarkList)
        {
            <tr>
                <td class="text-center"> @*@Html.DisplayFor(modelItem => item.Total)*@   </td>
                <td class="text-center"> @Html.DisplayFor(modelItem => item.FinalTermValue)   </td>
                <td class="text-center"> @Html.DisplayFor(modelItem => item.QualitativeAssessmentGrades)   </td>
                <td class="text-center"> @Html.DisplayFor(modelItem => item.ShortQuizzes)   </td>
                <td class="text-center"> @Html.DisplayFor(modelItem => item.Subject.Name)   </td>
                <td class="text-center"> @Html.DisplayFor(modelItem => item.Student.FullName)   </td>

            </tr>
        }
    </tbody>
</table>

