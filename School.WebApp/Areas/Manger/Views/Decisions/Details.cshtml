@model School.Data.Entities.Decisions

@{
    ViewData["Title"] = "القرارات ";
}

<style>
    .save-click {
        border: 3px solid;
        width: 145px !important;
        padding: 5px !important;
    }
    .dropdown-menu.show {
        display: block !important;
        background-color: #4159AE !important;
        top: 1cm !important;
    }
</style>
<link rel="stylesheet" href="~/assets/TFiles/css/CreateStyle.css" />
<link rel="stylesheet" href="~/css/GetAllMediaQuery.css" />


<div class="col-md-12">
    <div class="footer-section">
        <div class="row" style="color: #fff; background-color: #8c9cd0; padding: 15px;">
            <div class="col-6 text-left">
                <div>
                    <div class="save-click">
                        <a asp-action="Edit" asp-route-id="3">
                            تعديل القرارات
                            <i class="fa-solid fa-pen-to-square"></i>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-6 text-right">
                <div class="back-click">
                    <div style="padding-top: 5px; color: #fff; font-size: 20px; font-family: 'Changa', sans-serif; ">
                        <span class="">
                            القرارات
                        </span>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>

<div class="container-fluid mt-5 mb-3">
    <div class="row  text-right">
        <div class="kt-content  kt-grid__item kt-grid__item--fluid col-12" id="kt_content">
            <div class="row">
                <div class="col-lg-12">
                    <!--begin::Portlet-->
                    <div class="kt-portlet kt-portlet--last kt-portlet--head-lg kt-portlet--responsive-mobile" id="kt_page_portlet">
                        <div class="kt-portlet__body">
                            <div class="row">
                                <div class="col-xl-2"></div>
                                <div class="col-xl-8">
                                    <div class="kt-section kt-section--first">
                                        <div class="kt-section__body">
                                            <h3 class="kt-section__title kt-section__title-lg " style="text-align: right;"> : بيانات السماح بالإضافة   </h3>
                                            <div class="form-group row">
                                                <div class="col-6">
                                                    @if (Model.AllowToCreatMarks == true)
                                                    {
                                                        <span>تم السماح بالإضافة </span>

                                                    }
                                                    else
                                                    {
                                                        <span>  غير مسموح بالإضافة  </span>
                                                    }

                                                </div>
                                                <label class="col-6 col-form-label"> @Html.DisplayNameFor(model => model.AllowToCreatMarks)  </label>

                                            </div>

                                            <div class="form-group row">
                                                <div class="col-6">
                                                    @Html.DisplayFor(model => model.CreatedAllowedFrom)
                                                </div>
                                                <label class="col-6 col-form-label">@Html.DisplayNameFor(model => model.CreatedAllowedFrom) </label>
                                            </div>

                                            <div class="form-group row">
                                                <div class="col-6">
                                                    @Html.DisplayFor(model => model.CreatedAllowedTo)
                                                </div>
                                                <label class="col-6 col-form-label">@Html.DisplayNameFor(model => model.CreatedAllowedTo) </label>
                                            </div>



                                        </div>
                                    </div>
                                    <div class="kt-separator kt-separator--border-dashed kt-separator--space-lg"></div>
                                    <div class="kt-section">
                                        <div class="kt-section__body">
                                            <h3 class="kt-section__title kt-section__title-lg text-right" style="text-align: right !important;"> : البيانات التفصيلية </h3>



                                            <div class="form-group row">
                                                <div class="col-6">
                                                    @if (Model.AllowToUpdatedMarks == true)
                                                    {
                                                        <span>تم السماح بالتعديل </span>

                                                    }
                                                    else
                                                    {
                                                        <span>  غير مسموح بالتعديل  </span>
                                                    }
                                                </div>
                                                <label class="col-6 col-form-label"> @Html.DisplayNameFor(model => model.AllowToUpdatedMarks)  </label>

                                            </div>

                                            <div class="form-group row">
                                                <div class="col-6">
                                                    @Html.DisplayFor(model => model.UpdatedAllowedFrom)
                                                </div>
                                                <label class="col-6 col-form-label">@Html.DisplayNameFor(model => model.UpdatedAllowedFrom) </label>
                                            </div>

                                            <div class="form-group row">
                                                <div class="col-6">
                                                    @Html.DisplayFor(model => model.UpdatedAllowedTo)
                                                </div>
                                                <label class="col-6 col-form-label">@Html.DisplayNameFor(model => model.UpdatedAllowedTo) </label>
                                            </div>




                                        </div>
                                    </div>

                                    <div class="kt-separator kt-separator--border-dashed kt-separator--space-lg"></div>

                                </div>
                                <div class="col-xl-2"></div>
                            </div>

                        </div>
                    </div>

                    <!--end::Portlet-->
                </div>
            </div>
        </div>
    </div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
