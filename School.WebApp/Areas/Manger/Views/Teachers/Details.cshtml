@model School.Data.Entities.Teacher

@{
    ViewData["Title"] = "بينانات المعلم ";
}
 


<style>
    .label-info {
        font-size: 18px;
        font-weight: 500;
    }

    .data-div {
        margin-top: 20px;
    }

    .data-span {
        font-size: 15px;
        color: #918282;
    }
</style>


<div class="row">
    <div class="col-md-12">
        <div style="text-align: right; color: #000; font-size: 22px; font-weight: 600; margin-bottom: 40px; border-bottom: 2px dashed ; padding-bottom: 10px;">
            <span>بيانات المعلم    </span>
        </div>
    </div>


    <div class="col-3"></div>

    <div class="col-md-3 text-right">
        <div class="row">
            <div class="col-md-12">
                <span class="label-info">
                    رقم الهاتف
                    <i class="fa-solid fa-phone-flip"></i>
                </span>
            </div>
            <div class="col-md-12 data-div">
                <span class="data-span"> @Html.DisplayFor(d => d.PhoneNumber) </span>
            </div>
        </div>
    </div>

    <div class="col-md-3 text-right">
        <div class="row">
            <div class="col-md-12">
                <span class="label-info">
                    البريد الالكتروني
                    <i class="fa-solid fa-envelope"></i>
                </span>

            </div>
            <div class="col-md-12 data-div">
                <span class="data-span">@Html.DisplayFor(d => d.EmailAddress) </span>
            </div>
        </div>
    </div>

    <div class="col-md-3 text-right">
        <div class="row">
            <div class="col-md-12">
                <span class="label-info">
                    الاسم بالكامل
                    <i class="fa-solid fa-signature"></i>
                </span>
            </div>
            <div class="col-md-12 data-div">
                <span class="data-span">  @Html.DisplayFor(d => d.FullName) </span>
            </div>
        </div>
    </div>

    <div class="col-md-12">
        <div style="text-align: right; color: #000; font-size: 22px; font-weight: 600; margin-bottom: 40px; border-bottom: 2px dashed; padding-bottom: 10px;margin-top:50px">
            <span>
                بيانات المعلم  الأكاديمية
            </span>
        </div>
    </div>


    <div class="col-md-4 text-right">
        <div class="row">

        </div>
    </div>


    <div class="col-md-4 text-right">
        <div class="row">
            <div class="col-md-12">
                <span class="label-info">
                    سنة التعيين
                    <i class="fa-solid fa-calendar"></i>
                </span>
            </div>
            <div class="col-md-12 data-div">
                <span class="data-span"> @Html.DisplayFor(d => d.AppointmentYear)   </span>
            </div>
        </div>
    </div>



    <div class="col-md-4 text-right">
        <div class="row">
            <div class="col-md-12">
                <span class="label-info">
                    اسم التخصص
                    <i class="fa-solid fa-calendar-days"></i>
                </span>
            </div>
            <div class="col-md-12 data-div">
                <span class="data-span"> @Html.DisplayFor(d => d.Specialization) </span>
            </div>
        </div>
    </div>






</div> 