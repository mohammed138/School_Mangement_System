@model School.Data.Entities.Student

@{
    ViewData["Title"] = "تفاصيل الطالب";
}



<style>
    .label-info {
        font-size: 18px;
        font-weight: 500;
    }

    .data-div {
        margin-top: 20px;
    }

    .data-span {
        font-size: 15px;
        color: #918282;
    }
</style>


<div class="row">
    <div class="col-md-12">

        <div class="row">
            <div class="col-md-6">
                <p class="text-left">
                    <a class="btn btn-info" asp-action="Edit" asp-route-id="@Model.Id" style="background-color: #4159AE;color:#fff;font-weight:500;">
                        تعديل
                        <i class="fa-solid fa-plus"></i>
                    </a>
                </p>
            </div>

            <div class="col-md-6">
                <div style="text-align: right; color: #000; font-size: 22px; font-weight: 600; margin-bottom: 40px; border-bottom: 2px dashed ; padding-bottom: 10px;">
                    <span>بيانات الطالب الأساسية </span>
                </div>
            </div>


        </div>


    </div>

    <div class="col-md-3 text-right">
        <div class="row">
            <div class="col-md-12">
                <span class="label-info">
                    الاسم بالكامل
                    <i class="fa-solid fa-signature"></i>
                </span>
            </div>
            <div class="col-md-12 data-div">
                <span class="data-span"> @Html.DisplayFor(model => model.FullName)  </span>
            </div>
        </div>
    </div>

    <div class="col-md-3 text-right">
        <div class="row">
            <div class="col-md-12">
                <span class="label-info">
                    تاريخ الميلاد
                    <i class="fa-solid fa-cake-candles"></i>
                </span>
            </div>
            <div class="col-md-12 data-div">
                <span class="data-span">  @Html.DisplayFor(model => model.DOP)  </span>
            </div>
        </div>
    </div>

    <div class="col-md-3 text-right">
        <div class="row">
            <div class="col-md-12">
                <span class="label-info">
                    رقم الهاتف
                    <i class="fa-solid fa-phone-flip"></i>
                </span>
            </div>
            <div class="col-md-12 data-div">
                <span class="data-span">  @Html.DisplayFor(model => model.PhoneNumber) </span>
            </div>
        </div>
    </div>

    <div class="col-md-3 text-right">
        <div class="row">
            <div class="col-md-12">
                <span class="label-info">
                    البريد الالكتروني
                    <i class="fa-solid fa-envelope"></i>
                </span>

            </div>
            <div class="col-md-12 data-div">
                <span class="data-span">    @Html.DisplayFor(model => model.EmailAddress)</span>
            </div>
        </div>
    </div>

    <div class="col-md-12">
        <div style="text-align: right; color: #000; font-size: 22px; font-weight: 600; margin-bottom: 40px; border-bottom: 2px dashed; padding-bottom: 10px;margin-top:50px">
            <span>
                بيانات الطالب الأكاديمية
            </span>
        </div>
    </div>


    <div class="col-md-4 text-right">
        <div class="row">
            <div class="col-md-12">
                <span class="label-info">
                    الفصل الدراسي
                    <i class="fa-solid fa-calendar"></i>
                </span>
            </div>
            <div class="col-md-12 data-div">
                <span class="data-span">  @Html.DisplayFor(model => model.Semester.Name)  </span>
            </div>
        </div>
    </div>



    <div class="col-md-4 text-right">
        <div class="row">
            <div class="col-md-12">
                <span class="label-info">
                    العام الدراسي
                    <i class="fa-solid fa-calendar-days"></i>
                </span>
            </div>
            <div class="col-md-12 data-div">
                <span class="data-span">  @Html.DisplayFor(model => model.SchoolYear)</span>
            </div>
        </div>
    </div>


    <div class="col-md-4 text-right">
        <div class="row">
            <div class="col-md-12">
                <span class="label-info">
                    الصف الدراسي
                    <i class="fa-solid fa-landmark"></i>
                </span>
            </div>
            <div class="col-md-12 data-div">
                <span class="data-span">
                    @Html.DisplayFor(model => model.Class.Name)
                </span>
            </div>
        </div>
    </div>




</div>


