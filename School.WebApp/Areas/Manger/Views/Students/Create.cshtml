@model School.Data.ViewModels.StudentViewModel

@{
    ViewData["Title"] = "إضافة طالب جديد";
}



<link rel="stylesheet" href="~/assets/TFiles/css/CreateStyle.css" />
<link rel="stylesheet" href="~/css/CreateEditMediaQuery.css" />



<form class="kt-form" id="kt_form" asp-action="Create">

    <div class="col-12">
        <div class="row">
            <span asp-validation-for="@Model.Student.FirstName" class="col-12 text-right text-danger">  </span>
            <span asp-validation-for="@Model.Student.LastName" class="col-12 text-right text-danger">  </span>
            <span asp-validation-for="@Model.Student.DOP" class="col-12 text-right text-danger">  </span>
            <span asp-validation-for="@Model.Student.PlaceOBirth" class="col-12 text-right text-danger">  </span>
            <span asp-validation-for="@Model.Student.AddressName" class="col-12 text-right text-danger">  </span>
            <span asp-validation-for="@Model.Student.PhoneNumber" class="col-12 text-right text-danger">  </span>
            <span asp-validation-for="@Model.Student.EmailAddress" class="col-12 text-right text-danger">  </span>
            <span asp-validation-for="@Model.Student.GenderId" class="col-12 text-right text-danger">  </span>
            <span asp-validation-for="@Model.Student.ClassId" class="col-12 text-right text-danger">  </span>
            <span asp-validation-for="@Model.Student.SemesterId" class="col-12 text-right text-danger">  </span> 
        </div>
    </div>
    <div class="col-md-12">
        <div class="footer-section">
            <div class="row" style="color: #fff; background-color: #8c9cd0; padding: 15px;">

                <div class="col-6 text-left">
                    <div>
                        <div class="save-click">
                            <input type="submit" value="حفظ" class="btn btn-primary" style="color: #fff; border-color: #8c9cd0; background-color: #8c9cd0; " />
                            <i class="fa-solid fa-check" style=" padding-right: 10px;"></i>
                        </div>
                    </div>
                </div>
                <div class="col-6 text-right">
                    <div class="back-click">
                        <div style="padding-top: 5px; color: #fff; font-size: 20px; font-family: 'Changa', sans-serif; ">
                            <span class="">
                                إضافة طالب جديد
                            </span>
                            <i class="fa-solid fa-plus"></i>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>

    <div class="container-fluid mt-5 mb-3">
        <div class="row  text-right">
            <div class="kt-content  kt-grid__item kt-grid__item--fluid col-12" id="kt_content">
                <div class="row">
                    <div class="col-lg-12">
                        <!--begin::Portlet-->
                        <div class="kt-portlet kt-portlet--last kt-portlet--head-lg kt-portlet--responsive-mobile" id="kt_page_portlet">

                            <div class="kt-portlet__body">

                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="row">
                                    <div class="col-xl-2"></div>
                                    <div class="col-xl-8">
                                        <div class="kt-section kt-section--first">
                                            <div class="kt-section__body">
                                                <h3 class="kt-section__title kt-section__title-lg " style="text-align: right;"> : البيانات الأساسية </h3>

                                                <div class="form-group row">
                                                    <div class="col-9">
                                                        <input asp-for="@Model.Student.FirstName" class="form-control" />
                                                    </div>
                                                    <label class="col-3 col-form-label">الاسم الأول  </label>
                                                </div>

                                                <div class="form-group row">
                                                    <div class="col-9">
                                                        <input asp-for="@Model.Student.LastName" class="form-control" />
                                                    </div>
                                                    <label class="col-3 col-form-label">اسم العائلة   </label>
                                                </div>


                                                <div class="form-group row">
                                                    <div class="col-9">
                                                        <input asp-for="@Model.Student.DOP" class="form-control" />
                                                    </div>
                                                    <label class="col-3 col-form-label"> تاريخ الميلاد </label>
                                                </div>

                                                <div class="form-group row">
                                                    <div class="col-9">
                                                        <input asp-for="@Model.Student.PlaceOBirth" class="form-control" />
                                                    </div>
                                                    <label class="col-3 col-form-label"> مكان الميلاد </label>
                                                </div>


                                                <div class="form-group row">
                                                    <div class="col-9">
                                                        <input asp-for="@Model.Student.AddressName" class="form-control" />
                                                    </div>
                                                    <label class="col-3 col-form-label">عنوان السكن   </label>
                                                </div>


                                                <div class="form-group row">
                                                    <div class="col-9">
                                                        <input asp-for="@Model.Student.PhoneNumber" class="form-control" />
                                                    </div>
                                                    <label class="col-3 col-form-label"> رقم الهاتف </label>
                                                </div>

                                                <div class="form-group row">
                                                    <div class="col-9">
                                                        <input asp-for="@Model.Student.EmailAddress" class="form-control" />
                                                    </div>
                                                    <label class="col-3 col-form-label">الإيميل  </label>
                                                </div>

                                                <div class="form-group row">
                                                    <div class="col-9">
                                                        <select asp-for="@Model.Student.GenderId" class="form-control" asp-items="Model.GenderDrop"></select>
                                                    </div>
                                                    <label class="col-3 col-form-label">الجنس    </label>
                                                </div>

                                                <div class="form-group row">
                                                    <div class="col-9">
                                                        <select asp-for="@Model.Student.ClassId" class="form-control" asp-items="Model.ClassDrop"></select>
                                                    </div>
                                                    <label class="col-3 col-form-label"> تسجيل الطالب في الصف  </label>
                                                </div>


                                                <div class="form-group row">
                                                    <div class="col-9">
                                                        <select asp-for="@Model.Student.SemesterId" class="form-control" asp-items="Model.SemesterDrop"></select>
                                                    </div>
                                                    <label class="col-3 col-form-label">الفصل الدراسي   </label>
                                                </div>



                                            </div>
                                        </div>
                                        <div class="kt-separator kt-separator--border-dashed kt-separator--space-lg"></div>
                                       
                                    </div>
                                    <div class="col-xl-2"></div>
                                </div>

                            </div>
                        </div>

                        <!--end::Portlet-->
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

 