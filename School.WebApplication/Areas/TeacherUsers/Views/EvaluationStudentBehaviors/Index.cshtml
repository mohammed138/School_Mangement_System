@model IEnumerable<School.Data.Entities.SkillsStudentBehavior>

@{
    ViewData["Title"] = "التقييمات السلوكية ";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table id="myTable" class="table dt-responsive" style="width">
    <thead class="thead_dark">
        <tr>
             <th class="text-right">
                @Html.DisplayNameFor(model => model.Class)
            </th>
             <th class="text-right">
                @Html.DisplayNameFor(model => model.Student)
            </th>
             <th class="text-right">
                @Html.DisplayNameFor(model => model.Subject)
            </th>
             <th class="text-right">
                @Html.DisplayNameFor(model => model.Teacher)
            </th>
             <th class="text-right">
                @Html.DisplayNameFor(model => model.Duration)
            </th>
             <th class="text-right">
                @Html.DisplayNameFor(model => model.SkillsType)
            </th>
             <th class="text-right">
                @Html.DisplayNameFor(model => model.Notice)
            </th>
            
             <th class="text-right"></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
             <td class="text-center">
                @Html.DisplayFor(modelItem => item.Class.Name)
            </td>
             <td class="text-center">
                @Html.DisplayFor(modelItem => item.Student.AddressName)
            </td>
             <td class="text-center">
                @Html.DisplayFor(modelItem => item.Subject.Name)
            </td>
             <td class="text-center">
                @Html.DisplayFor(modelItem => item.Teacher.FirstName)
            </td>
             <td class="text-center">
                @Html.DisplayFor(modelItem => item.Duration.Name)
            </td>
             <td class="text-center">
                @Html.DisplayFor(modelItem => item.SkillsType.Id)
            </td>
             <td class="text-center">
                @Html.DisplayFor(modelItem => item.Notice)
            </td>
            
             <td class="text-center">
                <a asp-action="Edit" asp-route-id="@item.Id">تعديل </a> |
                <a asp-action="Details" asp-route-id="@item.Id">عرض التفاصيل</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">حذف</a>
            </td>
        </tr>
}
    </tbody>
</table>
