@model School.Data.ViewModels.SkillsViewModel

@{
    ViewData["Title"] = "عرض التقييمات";
}



@if (Model.IsActive == true)
{




<div class="container-fluid mt-5 mb-3">
    <div class="row" style="margin-top:-5rem !important ">
        <div class="col-12 text-right" style="    margin-bottom: 50px;
                           padding: 30px;
                           background-color: #fff;
                           box-shadow: rgb(0 0 0 / 10%) 0px 5px 12px;">
            <h3>
                عرض التقييمات   لطلاب الفصل
            </h3>
            <small>
                .  هذه الصفحة تعرض التقييمات  الطلاب وتعرض بيانات مفصلة , الخاصة بكل طالب للتسهيل الوصول إليها
            </small>
        </div>
    </div>


    <div class="row "> 
        <div class="col-md-12 ">
            <div class="row bg-white"> 
                <div class="col-12">
                    <table id="myTable" class="table dt-responsive">
                        <thead class="thead_dark">
                            <tr>
                                <td class="text-right">  الإجراءات     </td>
                                <td class="text-right">   ملاحظات    </td>
                                <td class="text-right">   القييم    </td>
                                <td class="text-right">   رقم الأسبوع    </td>
                                <td class="text-right">   مدرس المادة     </td>
                                <td class="text-right">   المادة    </td>
                                <td class="text-right">  اسم الطالب  </td>


                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.SkillsList)
                            {
                                <tr>
                                    <td class="text-right">
                                        <div class="dropdown">
                                            <button class="btn btn-secondary"
                                                    type="button"
                                                    id="dropdownMenuButton"
                                                    data-toggle="dropdown"
                                                    aria-haspopup="true"
                                                    aria-expanded="false" style="background-color: #fff;border:0px;">
                                                <i class="fa-solid fa-ellipsis" style="color: #000;"></i>
                                            </button>

                                            <div class="dropdown-menu text-right"
                                                 aria-labelledby="dropdownMenuButton">
                                                <a class="dropdown-item" href="#">
                                                    طلب تعديل
                                                    <i class="fa-sharp fa-solid fa-eye" style="padding-left: 5px;"></i>
                                                </a>

                                            </div>
                                        </div>

                                    </td>
                                    <td class="text-right">  @Html.DisplayFor(modelItem => item.Notice) </td>
                                    <td class="text-right">  @Html.DisplayFor(modelItem => item.SkillsType.Name)   </td>
                                    <td class="text-right">  @Html.DisplayFor(modelItem => item.Duration.Name)  </td>
                                    <td class="text-right">  @Html.DisplayFor(modelItem => item.Teacher.FullName)  </td>
                                    <td class="text-right"> @Html.DisplayFor(modelItem => item.Subject.Name)   </td>
                                    <td class="text-right">
                                        @Html.DisplayFor(modelItem => item.Student.FullName)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div> 
    </div>
    </div>

   



    } else {
    <p style="    font-size: 20px;
    font-weight: 700;
    text-align: center;
    padding-top: 5cm;"> لا يوجد تقييمات لهذا الفصل الدراسي</p>
    }
