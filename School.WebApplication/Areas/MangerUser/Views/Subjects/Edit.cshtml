@model School.Data.ViewModels.SubjectViewModel

@{
    ViewData["Title"] = "تعديل مادة دراسية ";
}


<link rel="stylesheet" href="~/assets/TFiles/css/CreateStyle.css" />



<form class="kt-form" id="kt_form" asp-action="Edit">
    <input type="hidden" asp-for="Subject.Id" />
      @Html.HiddenFor(d => d.Subject.CreatedAt)
    @Html.HiddenFor(d => d.Subject.CreatedBy)
      <div class="col-md-12">
        <div class="footer-section">
            <div class="row" style="color: #fff; background-color: #8c9cd0; padding: 15px;">

                <div class="col-6 text-left">
                    <div>
                        <div class="save-click">
                            <input type="submit" value="حفظ التعديلات " class="btn btn-primary" style="color: #fff; border-color: #8c9cd0; background-color: #8c9cd0; " />
                            <i class="fa-solid fa-check" style=" padding-right: 10px;"></i>
                        </div>
                    </div>
                </div>
                <div class="col-6 text-right">
                    <div class="back-click">
                        <div style="padding-top: 5px; color: #fff; font-size: 20px; font-family: 'Changa', sans-serif; ">
                            <span class="">
                                تعديل  مادة 
                            </span>
                            <i class="fa-solid fa-pen-to-square"></i>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>

    <div class="container-fluid mt-5 mb-3">
        <div class="row  text-right">
            <div class="kt-content  kt-grid__item kt-grid__item--fluid col-12" id="kt_content">
                <div class="row">
                    <div class="col-lg-12">
                        <!--begin::Portlet-->
                        <div class="kt-portlet kt-portlet--last kt-portlet--head-lg kt-portlet--responsive-mobile" id="kt_page_portlet">

                            <div class="kt-portlet__body">

                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="row">
                                    <div class="col-xl-2"></div>
                                    <div class="col-xl-8">
                                        <div class="kt-section kt-section--first">
                                            <div class="kt-section__body">
                                                <h3 class="kt-section__title kt-section__title-lg " style="text-align: right;"> : البيانات الأساسية </h3>
                                                <div class="form-group row">
                                                    <div class="col-9">
                                                        <input asp-for="@Model.Subject.Name" class="form-control" />
                                                    </div>
                                                    <label class="col-3 col-form-label">اسم المادة </label>
                                                </div>
                                                <div class="form-group row">
                                                    <div class="col-9">
                                                        <select asp-for="@Model.Subject.ClassId" class="form-control" asp-items="Model.ClassDrop"></select>
                                                    </div>
                                                    <label class="col-3 col-form-label"> تحديد الصف </label>
                                                </div>

                                                <div class="form-group row">
                                                    <div class="col-9">
                                                        <select asp-for="@Model.Subject.TeacherId" class="form-control" asp-items="Model.TeacherDrop">
                                                            <option selected>-- الرجاء إختيار معلم المادة --</option>
                                                        </select>
                                                    </div>
                                                    <label class="col-3 col-form-label">  تحديد معلم المادة        </label>
                                                </div>

                                            </div>
                                        </div>
                                        <div class="kt-separator kt-separator--border-dashed kt-separator--space-lg"></div>
                                        <div class="kt-section">
                                            <div class="kt-section__body">






                                            </div>
                                        </div>


                                    </div>
                                    <div class="col-xl-2"></div>
                                </div>

                            </div>
                        </div>

                        <!--end::Portlet-->
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


